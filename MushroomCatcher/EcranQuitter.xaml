<UserControl x:Class="MushroomCatcher.EcranQuitter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MushroomCatcher"
        mc:Ignorable="d"
        Height="600" Width="800">
    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="/Image/Menu.png"/>
        </Grid.Background>

        <Button x:Name="ButRetourQuitter" Background="#00000000" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Top" Width="180" Height="51" Click="ButRetourQuitter_Click">
            <Image Source="/Image/Retour.png"/>
        </Button>

    </Grid>
</UserControl>
