<UserControl x:Class="MushroomCatcher.EcranBoutique"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MushroomCatcher"
        mc:Ignorable="d"
        Height="600" Width="800">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Image/Boutique.png"/>
        </Grid.Background>

        <Button x:Name="ButRetourBoutique" Background="#00000000" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="120" Height="51" Click="ButRetourBoutique_Click">
            <Image Source="/Image/Retour.png"/>
        </Button>

        <Image Source="/Image/RRRR.png" Stretch="Fill" Width="200" Height="104" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.25"/>

        <Button x:Name="ButVendre" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left"  Margin="335,278,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="ButRetourBoutique_Click">
            <Image Source="/Image/Vendre.png" Width="150"/>
        </Button>

    </Grid>
</UserControl>
