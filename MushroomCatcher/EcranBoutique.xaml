<UserControl x:Class="MushroomCatcher.EcranBoutique"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MushroomCatcher"
        mc:Ignorable="d"
        Height="400" Width="450">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Image/Boutique.png"/>
        </Grid.Background>

        <Button x:Name="ButRetourBoutique" Background="#00000000" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="120" Height="51" Click="ButRetourBoutique_Click">
            <Image Source="/Image/Retour.png"/>
        </Button>

        <Image Margin="0,255,0,0" Source="/Image/RRRR.png" Stretch="Fill" Width="70" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.25"/>

        <Button x:Name="ButVendre" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center"  Margin="0,260,0,0" VerticalAlignment="Top" Width="65" Height="20" Click="ButRetourBoutique_Click">
            <Image Source="/Image/Vendre.png"/>
        </Button>

    </Grid>
</UserControl>
