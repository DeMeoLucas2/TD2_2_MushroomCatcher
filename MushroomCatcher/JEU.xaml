<Window x:Class="MushroomCatcher.JEU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MushroomCatcher"
        mc:Ignorable="d"
        Height="616" Width="962">


    <Canvas Name="moove_map" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" >
        <Canvas.Background>
            <ImageBrush ImageSource="/image_gameplay/map.png"/>
        </Canvas.Background>

        <Image x:Name="Player" Source="/image_gameplay/main_Hero.png" Width="50" Height="50" Canvas.Left="20" Canvas.Top="20" />
    </Canvas>



</Window>

