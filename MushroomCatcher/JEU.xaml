<Window x:Class="MushroomCatcher.JEU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MushroomCatcher"
        mc:Ignorable="d"
        Height="700" Width="1000">


    <Canvas Name="moove_map" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" MouseLeftButtonDown="MouseClick" >
        <Canvas.Background>
            <ImageBrush ImageSource="/image_gameplay/map.png"/>
        </Canvas.Background>

        <Image x:Name="Player" Source="/image_gameplay/main_Hero.png" Width="84" Height="106" Canvas.Left="75" Canvas.Top="90" />

        <Button x:Name="ButBoutique" Canvas.Right="0" Canvas.Bottom="50" Background="#00000000" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="120" Height="51" Click="ButBoutique_Click">
            <Image Source="/Image/BoutiquePanneau.png"/>
        </Button>

        <Button x:Name="ButRetourJeu" Canvas.Right="0" Canvas.Bottom="0" Background="#00000000" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="120" Height="51" Click="ButRetourJeu_Click">
            <Image Source="/Image/Retour.png"/>
        </Button>
        <Image x:Name="mushroomAttack" Height="88" Canvas.Left="467" Source="/image_gameplay/mushroom_hungry.png" Stretch="Fill" Canvas.Top="298" Width="98" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="mushroomRun" Height="68" Canvas.Left="288" Source="/image_gameplay/mushroom_sad.png" Stretch="Fill" Canvas.Top="274" Width="66" HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Canvas>



</Window>

