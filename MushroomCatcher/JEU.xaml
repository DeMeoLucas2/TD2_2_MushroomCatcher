<Window x:Class="MushroomCatcher.JEU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MushroomCatcher"
        mc:Ignorable="d"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Canvas Name="moove_map" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" MouseDown="MouseClick">
        <Canvas.Background>
            <ImageBrush ImageSource="/image_gameplay/map.png"/>
        </Canvas.Background>

        <Image x:Name="ImageBarreSante" 
               Height="17" 
               Canvas.Left="10" 
               Stretch="Fill" 
               Canvas.Top="10" 
               Width="110"/>

        <StackPanel Orientation="Horizontal" Canvas.Left="10" Canvas.Top="35">
            <TextBlock x:Name="TxtPotions" 
                       Text="Potions: 0" 
                       FontSize="20" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       Margin="0,0,20,0">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock x:Name="TxtScore" 
                       Text="Score: 0" 
                       FontSize="20" 
                       Foreground="Gold" 
                       FontWeight="Bold">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>


        <Button x:Name="ButBoutique" 
                Canvas.Right="10" Canvas.Bottom="60" 
                Background="Transparent" 
                BorderBrush="{x:Null}" 
                Width="120" Height="51" 
                >
            <Image Source="/Image/BoutiquePanneau.png"/>
        </Button>

        <Button x:Name="ButRetourJeu" 
                Canvas.Right="10" Canvas.Bottom="10" 
                Background="Transparent" 
                BorderBrush="{x:Null}" 
                Width="120" Height="51" 
                Click="ButRetourJeu_Click">
            <Image Source="/Image/Retour.png"/>
        </Button>

        <Image x:Name="mushroomAttack" 
               Tag="ennemi"
               Height="104" Canvas.Left="500" 
               Source="/image_gameplay/mushroom_angry.png" 
               Stretch="Fill" Canvas.Top="238" Width="126"/>

        <Image x:Name="mushroomRun" 
               Tag="ennemi"
               Height="104" Canvas.Left="110" 
               Source="/image_gameplay/mushroom_sad.png" 
               Stretch="Fill" Canvas.Top="238" Width="127"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0" Canvas.Left="1694" Canvas.Top="7">
            <TextBlock Text="Volume Musique" Foreground="Black" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Slider x:Name="SliderVolume" 
            Minimum="0" 
            Maximum="1" 
            Value="1"
            Height="104" 
            Width="150"
            ValueChanged="SliderVolume_ValueChanged"/>
        </StackPanel>
        <Image x:Name="Player" Height="148" Canvas.Left="333" Source="/animationFinal/animation nouveau final/nouveau Hero animation/main_hero1.png" Stretch="Fill" Canvas.Top="216" Width="103" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Canvas>
</Window>
